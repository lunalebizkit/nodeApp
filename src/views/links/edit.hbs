<div class="container p-4">
    <div class="rom">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Titulo" value={{links.title}} autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value={{links.url}} name="url" class="form-control" placeholder="URL">                
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{{links.description}}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="bt btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
